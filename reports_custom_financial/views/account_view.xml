<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

      <record id="relations_account_account_form_inherit" model="ir.ui.view">
        <field name="name">relations.account.account.form</field>
        <field name="model">account.account</field>
        <field name="inherit_id" ref="account.view_account_form"/>
        <field name="arch" type="xml">

          <field name="group_id" position="after">
              <field name="group_finantial_id"/>
          </field>
    
        </field>
      </record>

        <record id="view_account_group_form_nova" model="ir.ui.view">
                    <field name="name">account.group.nova.form</field>
                    <field name="model">account.group.nova</field>
                    <field name="arch" type="xml">
                        <form string="Account Group">
                            <group>
                                <field name="name"/>
                                <field name="code_prefix"/>
                                <field name="parent_id"/>
                            </group>
                        </form>
                    </field>
                </record>

        <record id="view_account_group_search_nova" model="ir.ui.view">
            <field name="name">account.group.nova.search</field>
            <field name="model">account.group.nova</field>
            <field name="arch" type="xml">
                <search string="Account groups">
                    <field name="name"
                           filter_domain="['|', ('code_prefix', '=like', str(self) + '%'), ('name', 'ilike', self)]"
                           string="Account group"/>
                </search>
            </field>
        </record>

        <record id="view_account_group_tree_nova" model="ir.ui.view">
            <field name="name">account.group.nova.tree</field>
            <field name="model">account.group.nova</field>
            <field name="arch" type="xml">
                <tree string="Account Group">
                    <field name="code_prefix"/>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="action_account_group_tree_nova" model="ir.actions.act_window">
            <field name="name">Account Groups</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">account.group.nova</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_account_group_search_nova"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new account group
                </p>
            </field>
        </record>
        <menuitem action="action_account_group_tree_nova" id="menu_action_account_group_tree_nova" name="Grupos Financieros" parent="account.account_account_menu" groups="account.group_account_manager" sequence="50"/>
      </data>
</odoo>
