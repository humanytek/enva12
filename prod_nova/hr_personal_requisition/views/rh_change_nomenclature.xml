<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>

  <record model="ir.ui.view" id="hr_change_nomenclature_form_view">
    <field name="name">hr.change.nomenclature.form</field>
    <field name="model">hr.change.nomenclature</field>
    <field name="arch" type="xml">
      <form string="Hr Requisition">
        <header>
          <button name="action_draft" states="cancel" string="Cambiar a Borrador" type="object" class="btn-primary"/>
          <button name="action_in_progress" states="draft" string="Confirmar" type="object" class="btn-primary"/>
          <button name="action_aprovee_g" states="in_progress" string="Aprobacion" type="object" class="btn-primary"/>
            <button name="action_aprovee_rh" states="aprovee_g" string="Aprobacion" type="object" class="btn-primary"/>
            <button name="action_aprovee_ri" states="aprovee_rh" string="Aprobacion" type="object" class="btn-primary"/>
          <button name="action_done" states="aprovee_ri" string="Cerrar" type="object" class="btn-primary"/>
          <button name="action_cancel" states="in_progress,aprovee_g,aprovee_rh,aprovee_ri" string="Cancelar" type="object" class="btn-primary"/>

          <field name="state" widget="statusbar" statusbar_visible="cancel,draft,in_progress,aprovee_g,aprovee_rh,aprovee_ri,done" />
        </header>
        <sheet>

          <div class="float-left">
                   <label for="name" class="oe_edit_only oe_inline"/>
                   <h1>
                       <field name="name" readonly='1' />
                   </h1>
               </div>
          <group>
          <group>
            <field name="user_id" attrs="{'readonly':1}"/>
            <field name="hr_employee_id" attrs="{'readonly': [('state','not in',('draft'))]}"/>

          </group>
          <group>
            <field name="code_employee" attrs="{'readonly': [('state','not in',('draft'))]}" />
              <field name="requisition_date" attrs="{'readonly': [('state','not in',('draft'))]}" />
          </group>
        </group>
        <group>
          <group>
                <field name="hr_job_current_id" attrs="{'readonly': [('state','not in',('draft'))]}" />

                <field name="date_applied" attrs="{'readonly': [('state','not in',('draft'))]}" />
            </group>
            <group>
              <field name="hr_job_proposed_id" attrs="{'readonly': [('state','not in',('draft'))]}" />

            </group>

        </group>


        </sheet>
        <div class="oe_chatter">
             <field name="message_follower_ids" widget="mail_followers"/>
             <field name="message_ids" widget="mail_thread"/>
           </div>
      </form>
    </field>
  </record>
  <record model="ir.actions.act_window" id="hr_change_nomenclature_list_action">
    <field name="name">Solicitudes de nomenclatura</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">hr.change.nomenclature</field>
    <field name="view_mode">tree,form</field>
    <field name="help" type="html">
      <p class="oe_view_nocontent_create">Create the first Change Nomenclature Requisition
      </p>
    </field>
  </record>
<menuitem id="menu_hr_change_nomenclature_list_action" name="Solicitud de Cambio de Nomenclatura" action="hr_change_nomenclature_list_action" parent="hr_recruitment.menu_crm_case_categ0_act_job"/>
</data>
</odoo>
