<?xml version="1.0" encoding="UTF-8"?>
<odoo>
 
<record id="salary_increase_report"  model="ir.actions.report">
  <field name="name">Formato</field>
  <field name="model">hr.salary.increase</field>
  <field name="report_type">qweb-pdf</field>
  <field name="report_name">hr_personal_requisition.report_salary_increase</field>
  <field name="report_file">hr_personal_requisition.report_salary_increase</field>
  <field name="print_report_name">object.state in ('in_progress')) and
        ('RS'+(object.name or '').replace('/','')</field>
  <field name="binding_model_id" ref="model_hr_personal_requisition"/>
  <field name="binding_type">report</field>
</record>

  <template id="report_salary_increase">
<t t-call="web.html_container">
  <t t-foreach="docs" t-as="o">
    <t t-call="web.external_layout">
  <div class="page">

    <h2>Incrementos salariales y/o modificación de nomenclatura de puesto</h2>
    <div class="row mt32 mb32">
      <div class="col-8" >

      </div>
      <div class="col-4">
        <strong>Fecha:</strong>
        <span t-field="o.requisition_date"/>
      </div>
    </div>
    <div class="row mt32 mb32">
      <div class="col-12" >
      <table class="table table-bordered">
        <tr>
          <td align="center">
            <strong>Datos del colaborador</strong>
          </td>
        </tr>
      </table>
    </div>
    </div>
    <div class="row mt32 mb32">
      <div class="col-6" >
        <strong>Nombre:</strong>
        <span t-field="o.hr_employee_id"/>
      </div>
      <div class="col-6">
        <strong>Código de colaborador:</strong>
        <span t-field="o.code_employee"/>
      </div>
    </div>
    <div class="row mt32 mb32">
        <div class="col-12" >
      <table class="table table-bordered">
        <tr>
          <td align="center">
            <strong>Datos del incremento y/o modificación del puesto</strong>
          </td>
        </tr>
      </table>
    </div>
    </div>
    <div class="row mt32 mb32">
      <div class="col-6">
        <strong>Nombre Actual:</strong>
        <span t-field="o.hr_job_current_id"/>
      </div>
      <div class="col-6">
        <strong>Nombre propuesto:</strong>
        <span t-field="o.hr_job_proposed_id"/>
      </div>
    </div>
    <div class="row mt32 mb32">
      <div class="col-6">
        <strong>Nivel actual:</strong>
        <span t-field="o.nivel_current"/>
      </div>
      <div class="col-6">
        <strong>Nuevo nivel:</strong>
        <span t-field="o.nivel_new"/>
      </div>
    </div>
    <div class="row mt32 mb32">
      <div class="col-6">
        <strong>Sueldo diario actual:</strong>
        <span t-field="o.daily_salary_current"/>
      </div>
      <div class="col-6">
        <strong>Sueldo diario nuevo:</strong>
        <span t-field="o.daily_salary_new"/>
      </div>
    </div>
    <div class="row mt32 mb32">
      <div class="col-6">
        <strong>Sueldo mensual bruto actual:</strong>
        <span t-field="o.month_salary_current_brut"/>
      </div>
      <div class="col-6">
        <strong>Sueldo mensual bruto nuevo:</strong>
        <span t-field="o.month_salary_new_brut"/>
      </div>
    </div>
    <div class="row mt32 mb32">
      <div class="col-12">
        <strong>Fecha de aplicacion o retroactivo al:</strong>
        <span t-field="o.requisition_date"/>
      </div>

    </div>
    <div class="row mt32 mb32">
      <div class="col-12">
        <strong>Justificacion:</strong>
        <span t-field="o.justify"/>
      </div>

    </div>
    <div class="row mt32 mb32">
      <div class="col-12" >
      <table class="table table-bordered">
        <tr>
          <td align="center">
            <strong>Gratificaciones</strong>
          </td>
        </tr>
      </table>
    </div>
    </div>
    <div class="row mt32 mb32">
      <div class="col-12">
        <strong>Monto de gratificacion:</strong>
        <span t-field="o.gratification"/>
        <strong>Justificacion:</strong>
        <span t-field="o.justify_gratification"/>
      </div>
    </div>
    <div>
        <div class="col-12">
      <table class="table">
        <tr>
                  <td width="33%" align="center">
                      <strong>Solicitó</strong>
                </td>
                <td width="33%" align="center">
                    <strong>Validó</strong>
              </td>
              <td width="33%" align="center">
                  <strong>Autorizó</strong>
            </td>
          </tr>
          <tr>
                    <td width="33%" align="center">
                          <br />
                          <hr/>
                          <strong>Gerencia de Area</strong>
                  </td>
                  <td width="33%" align="center">
                        <br />
                        <hr/>
                        <strong>Gerencia de Relaciones industriales</strong>
                </td>
                <td width="33%" align="center">
                      <br />
                      <hr/>
                      <strong>Dirección General</strong>
              </td>
            </tr>
      </table>
    </div>
    </div>
  </div>
</t>
</t>
</t>
    </template>


</odoo>
