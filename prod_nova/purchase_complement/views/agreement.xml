<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <record id="agreement_purchases_tree_inherit" model="ir.ui.view">
    <field name="name">agreement.tree</field>
    <field name="model">purchase.requisition</field>
    <field name="inherit_id" ref="purchase_requisition.view_purchase_requisition_tree"/>
    <field name="arch" type="xml">
      <field name="user_id" position="after">
        <!-- Add new fields here -->
        <field name="write_uid"/>
      </field>
      <field name="ordering_date" position="after">
        <!-- Add new fields here -->
        <field name="schedule_date"/>
      </field>
      <field name="date_end" position="after">
        <!-- Add new fields here -->
        <field name="reference"/>
      </field>
    </field>
  </record>

  <!-- Inherit Form view -->
  <record id="agreement_purchases_form_inherit" model="ir.ui.view">
    <field name="name">agreement.form</field>
    <field name="model">purchase.requisition</field>
    <field name="inherit_id" ref="purchase_requisition.view_purchase_requisition_form"/>
    <field name="arch" type="xml">
      <xpath expr="//field[@name='currency_id']" position="after">
            <field name="warehouse_id"/>

          </xpath>

      <xpath expr="//field[@name='origin']" position="after">
        <field name="reference"/>
        <field name="prioridad"/>
        <field name="anticipo"/>
      </xpath>

      <!-- <xpath expr="//field[@name='picking_type_id']" position="replace">
        <field name="picking_type_id" widget="selection" groups="stock.group_adv_location" attrs="{'readonly': [('state', '!=', 'draft')]}" domain="['|', ('code', '=like', 'incoming'), ('name', '=like', 'RecepciÃ³n')]" />
      </xpath> -->

    </field>
  </record>
</odoo>
