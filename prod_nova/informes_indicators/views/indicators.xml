<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record model="ir.ui.view"
            id="indicators_nova_form_view">
        <field name="name">indicators.nova.form</field>
        <field name="model">indicators.nova</field>
        <field name="arch"
               type="xml">
            <form string="Indicators">
                <header />
                <sheet>
                    <div class="float-left">
                        <label for="name"
                               class="oe_edit_only oe_inline" />
                        <h1>
                            <field name="name"
                                   readonly="1" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="indicator_date" />
                            <field name="back_order" />
                            <field name="back_log" />
                            <field name="ton_fosber" />
                            <field name="mezcla_prom" />
                            <field name="paper_weight" />
                            <field name="controllable_trim" />
                            <field name="finished_warehouse" />
                            <field name="total_waste" />
                        </group>
                        <group>
                            <field name="paca_waste" />
                            <field name="tons_paper" />
                            <field name="total_rolls" />
                            <field name="tons_shipment" />
                            <field name="ton_lam" />
                            <field name="other_receipts" />
                            <field name="price_lam" />
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"
                           widget="mail_followers" />
                    <field name="message_ids"
                           widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>
    <record model="ir.ui.view"
            id="indicators_nova_tree_view">
        <field name="name">indicators.nova.tree</field>
        <field name="model">indicators.nova</field>
        <field name="arch"
               type="xml">
            <tree string="Indicators Tree">
                <field name="indicator_date" />
                <field name="back_order" />
                <field name="back_log" />
                <field name="ton_fosber" />
                <field name="mezcla_prom" />
                <field name="paper_weight" />
                <field name="controllable_trim" />
                <field name="finished_warehouse" />
                <field name="total_waste" />
                <field name="paca_waste" />
                <field name="tons_paper" />
                <field name="total_rolls" />
                <field name="tons_shipment" />
                <field name="ton_lam" />
                <field name="other_receipts" />
                <field name="price_lam" />
            </tree>
        </field>
    </record>
    <record model="ir.actions.act_window"
            id="indicatorsnova_list_action">
        <field name="name">Indicators</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">indicators.nova</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help"
               type="html">
            <p class="o_view_nocontent_smiling_face">
               No Indicators found. Let's create one!
             </p>
            <p>
               Los indicadores nos sirven para el monitoreo de la informaci√≥n.
             </p>
        </field>
    </record>
    <menuitem id="indicatorsnova_menu"
              name="Indicators"
              parent="account_reports.account_reports_partners_reports_menu"
              action="indicatorsnova_list_action" />
    <record id="action_report_indicators_nova"
            model="ir.actions.client">
        <field name="name">Reporte Indicadores</field>
        <field name="tag">account_report</field>
        <field name="context"
               eval="{'model': 'report.indicators.nova'}" />
    </record>
    <menuitem id="menu_action_report_indicators_nova"
              name="Reporte Indicadores"
              action="action_report_indicators_nova"
              parent="account_reports.account_reports_partners_reports_menu" />
</odoo>