<odoo>
  <record id="account_invoice_line_view_tree" model="ir.ui.view">
    <field name="name">Account invoice line</field>
    <field name="model">account.move.line.report.nova</field>
    <field name="arch" type="xml">
      <tree string="Account Invoice Lines">
        <field name="aml_date"/>
        <field name="partner_id"/>
        <field name="move_id"/>
        <field name="move_name"/>
        <field name="reference"/>
        <field name="customer_id"/>
        <field name="default_code"/>
        <field name="product_id"/>
        <field name="etiqueta"/>
        <field name="invoice_origin"/>
        <field name="quantity"/>
        <field name="weight"/>
        <field name="total_weight"/>
        <field name="price_per_kg"/>
        <field name="price_unit"/>
        <field name="standard_price"/>
        <field name="product_uom"/>
        <field name="currency_id"/>
        <field name="price_subtotal"/>
        <field name="price_total"/>
        <field name="credit"/>
        <field name="aml_date_maturity"/>
        <field name="date_applied"/>
      </tree>
    </field>
  </record>

